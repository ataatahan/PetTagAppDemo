@model IList<PetTag.Service.DTOs.VetAppointmentListItemDto>
@{
    ViewData["Title"] = "Veteriner Randevuları";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-calendar-check"></i> Veteriner Randevuları</h1>
        <p class="text-muted mb-0">Tüm randevuları görüntüleyin ve yönetin</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-calendar-plus"></i> Yeni Randevu Ekle
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tarih</th>
                        <th>Pet Id</th>
                        <th>Veteriner Id</th>
                        <th>Notlar</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var appointment in Model)
                        {
                            <tr>
                                <td>@appointment.Id</td>
                                <td><strong>@appointment.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</strong></td>
                                <td>@appointment.PetId</td>
                                <td>@appointment.VetId</td>
                                <td>@(appointment.Notes ?? "-")</td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" asp-action="Delete" asp-route-id="@appointment.Id" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="Sil" onclick="return confirm('Bu randevuyu silmek istediğinizden emin misiniz?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="empty-state">
                                    <i class="bi bi-inbox"></i>
                                    <p class="mt-3">Henüz randevu kaydı bulunmamaktadır.</p>
                                    <a asp-action="Create" class="btn btn-primary">
                                        <i class="bi bi-calendar-plus"></i> İlk Randevuyu Ekle
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

