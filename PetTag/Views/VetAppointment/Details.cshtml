@model PetTag.Service.DTOs.VetAppointmentDetailDto
@{
    ViewData["Title"] = "Randevu Detayları";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-calendar-check"></i> Randevu Detayları</h1>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Bilgiler</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Id:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Tarih:</dt>
                    <dd class="col-sm-8"><strong>@Model.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</strong></dd>

                    <dt class="col-sm-4">Pet Id:</dt>
                    <dd class="col-sm-8">@Model.PetId</dd>

                    <dt class="col-sm-4">Veteriner Id:</dt>
                    <dd class="col-sm-8">@Model.VetId</dd>

                    <dt class="col-sm-4">Notlar:</dt>
                    <dd class="col-sm-8">@(Model.Notes ?? "-")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

