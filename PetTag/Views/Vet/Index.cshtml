@model IList<PetTag.Service.DTOs.VetListItemDto>
@{
    ViewData["Title"] = "Veterinerler";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-hospital"></i> Veterinerler</h1>
        <p class="text-muted mb-0">Tüm veterinerleri görüntüleyin ve yönetin</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-hospital"></i> Yeni Veteriner Ekle
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <form method="get" asp-action="Index" class="mb-3">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="İsim, soyisim veya telefon ile ara..." value="@ViewContext.HttpContext.Request.Query["search"]">
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="bi bi-search"></i> Ara
                </button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>İsim</th>
                        <th>Telefon</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var vet in Model)
                        {
                            <tr>
                                <td>@vet.Id</td>
                                <td><strong>@vet.FullName</strong></td>
                                <td>@vet.PhoneNumber</td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <a asp-action="Details" asp-route-id="@vet.Id" class="btn btn-sm btn-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@vet.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" asp-action="SoftDelete" asp-route-id="@vet.Id" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-secondary" title="Pasif Yap" onclick="return confirm('Bu veterineri pasif yapmak istediğinizden emin misiniz?');">
                                                <i class="bi bi-pause-circle"></i>
                                            </button>
                                        </form>
                                        <form method="post" asp-action="Delete" asp-route-id="@vet.Id" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="Sil" onclick="return confirm('Bu veterineri kalıcı olarak silmek istediğinizden emin misiniz?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <div class="empty-state">
                                    <i class="bi bi-inbox"></i>
                                    <p class="mt-3">Henüz veteriner kaydı bulunmamaktadır.</p>
                                    <a asp-action="Create" class="btn btn-primary">
                                        <i class="bi bi-hospital"></i> İlk Veterineri Ekle
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

